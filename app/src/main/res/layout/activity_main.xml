<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/saludoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Barrel la Fama"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/seleccionarMesaBoton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seleccionar_mesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saludoTextView"
        android:layout_marginTop="150dp"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/crearItemBoton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crear_tem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:textSize="30sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>